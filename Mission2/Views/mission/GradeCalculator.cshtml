@{
    ViewData["Title"] = "Grade Calculator";
}

@model GradeCalculatorModel

<!--Grade Calculator Form-->
<div class="center">
    <h2>IS 413 Grade Calculator</h2>
    <form method="post">
        <label>Assignments (Out of 55%):</label><br />
        <input id="iAssignments" asp-for="Assignments"/> <br />
        <label>Group Project (Out of 5%):</label><br />
        <input id="iGroupProject" asp-for="Project" /> <br />
        <label>Quizzes (Out of 10%):</label><br />
        <input id="iQuizzes" asp-for="Quizzes" /> <br />
        <label>Exams (Out of 20%):</label><br />
        <input id="iExams" asp-for="Exams"/> <br />
        <label>INTEX (Out of 10%):</label> <br />
        <input id="iIntex" asp-for="Intex" /> <br />
        <input id="btnSend" type="submit" value="Submit" />
        <div asp-validation-summary="All"></div>
    </form>

    <br />
    <!--Where the form results will display-->
    <p id="formResults"></p>
</div>

<!--Grade Calculator JS-->
<script src="~/js/GradeCalculator.js"></script>